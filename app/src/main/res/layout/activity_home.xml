<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eduardocruz.listaeletronica2.Home">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova lista"
        android:id="@+id/button"
        android:onClick="newLista"
        android:background="@color/colorBackgroundButton"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:drawableTop="@drawable/add_icon"
        android:drawablePadding="-5dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="listas"
        android:id="@+id/button2"
        android:background="@color/colorBackgroundButton"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:onClick="listarListas"
        android:drawableTop="@drawable/listas_icon"
        android:drawablePadding="-10dp"
        android:paddingTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="172.5dp"
        android:layout_height="180dp"
        android:text="produtos"
        android:id="@+id/button3"
        android:background="@color/colorBackgroundButton"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:onClick="listarProdutos"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/produto_icon"
        android:drawablePadding="-10dp"
        android:paddingTop="25dp"/>




</RelativeLayout>
